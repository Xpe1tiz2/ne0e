-- Ne0eLibrary: Rayfield benzeri, modern, sidebar menülü, koyu temalı UI
local Ne0eLibrary = {}

-- Havalı intro efekti
function Ne0eLibrary:CreateIntro(text, duration)
    local gui = Instance.new("ScreenGui")
    gui.Name = "Ne0eIntroGui"
    local frame = Instance.new("Frame")
    local glow = Instance.new("ImageLabel")
    local label = Instance.new("TextLabel")
    local icon = Instance.new("ImageLabel")
    gui.Parent = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")
    frame.Parent = gui
    frame.Size = UDim2.new(0, 440, 0, 150)
    frame.Position = UDim2.new(0.5, -220, 0.5, -75)
    frame.BackgroundColor3 = Color3.fromRGB(18, 18, 22)
    frame.BackgroundTransparency = 0.12
    frame.BorderSizePixel = 0
    frame.AnchorPoint = Vector2.new(0.5,0.5)
    frame.ClipsDescendants = true
    glow.Parent = frame
    glow.Size = UDim2.new(1, 60, 1, 60)
    glow.Position = UDim2.new(0, -30, 0, -30)
    glow.BackgroundTransparency = 1
    glow.Image = "rbxassetid://5028857084"
    glow.ImageColor3 = Color3.fromRGB(0, 255, 180)
    glow.ImageTransparency = 0.22
    glow.ZIndex = 0
    icon.Parent = frame
    icon.Size = UDim2.new(0, 60, 0, 60)
    icon.Position = UDim2.new(0, 20, 0, 45)
    icon.BackgroundTransparency = 1
    icon.Image = "rbxassetid://4483345998"
    icon.ImageColor3 = Color3.fromRGB(0,255,180)
    icon.ZIndex = 2
    label.Parent = frame
    label.Size = UDim2.new(1, -100, 1, 0)
    label.Position = UDim2.new(0, 90, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255,255,255)
    label.Font = Enum.Font.GothamBlack
    label.TextSize = 38
    label.TextStrokeTransparency = 0.13
    label.TextStrokeColor3 = Color3.fromRGB(0,255,180)
    label.ZIndex = 3
    label.TextWrapped = true
    label.TextTransparency = 1
    icon.ImageTransparency = 1
    for i = 1, 20 do
        label.TextTransparency = 1 - i/20
        glow.ImageTransparency = 0.5 - i/40
        icon.ImageTransparency = 1 - i/20
        wait(0.03)
    end
    spawn(function()
        wait(duration or 2)
        for i = 1, 20 do
            frame.BackgroundTransparency = 0.12 + i/20
            label.TextTransparency = i/20
            glow.ImageTransparency = 0.22 + i/20
            icon.ImageTransparency = i/20
            wait(0.04)
        end
        gui:Destroy()
    end)
end

function Ne0eLibrary:CreateWindow(title)
    local gui = Instance.new("ScreenGui")
    gui.Name = "Ne0eMainGui"
    local main = Instance.new("Frame")
    main.Parent = gui
    main.Size = UDim2.new(0, 650, 0, 420)
    main.Position = UDim2.new(0.5, -325, 0.5, -210)
    main.BackgroundColor3 = Color3.fromRGB(18, 18, 22)
    main.BorderSizePixel = 0
    main.AnchorPoint = Vector2.new(0.5,0.5)
    main.Active = true
    main.Draggable = true
    main.Visible = true
    local sidebar = Instance.new("Frame")
    sidebar.Parent = main
    sidebar.Size = UDim2.new(0, 140, 1, 0)
    sidebar.Position = UDim2.new(0,0,0,0)
    sidebar.BackgroundColor3 = Color3.fromRGB(24, 24, 30)
    sidebar.BorderSizePixel = 0
    sidebar.Visible = true
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Parent = sidebar
    titleLabel.Size = UDim2.new(1, 0, 0, 60)
    titleLabel.BackgroundTransparency = 1
    titleLabel.Text = title
    titleLabel.TextColor3 = Color3.fromRGB(255,255,255)
    titleLabel.Font = Enum.Font.GothamBold
    titleLabel.TextSize = 28
    local content = Instance.new("Frame")
    content.Parent = main
    content.Size = UDim2.new(1, -140, 1, 0)
    content.Position = UDim2.new(0, 140, 0, 0)
    content.BackgroundTransparency = 1
    content.Visible = true
    local Tabs = {}
    function main:AddTab(tabName)
        local tabBtn = Instance.new("TextButton")
        tabBtn.Parent = sidebar
        tabBtn.Size = UDim2.new(1, 0, 0, 38)
        tabBtn.Position = UDim2.new(0, 0, 0, 70 + (#sidebar:GetChildren()-2)*44)
        tabBtn.Text = tabName
        tabBtn.BackgroundColor3 = Color3.fromRGB(32,32,38)
        tabBtn.TextColor3 = Color3.fromRGB(200,200,200)
        tabBtn.Font = Enum.Font.GothamBold
        tabBtn.TextSize = 20
        tabBtn.BorderSizePixel = 0
        tabBtn.AutoButtonColor = true
        tabBtn.ZIndex = 2
        tabBtn.Visible = true
        local tabFrame = Instance.new("Frame")
        tabFrame.Parent = content
        tabFrame.Size = UDim2.new(1, 0, 1, 0)
        tabFrame.Position = UDim2.new(0, 0, 0, 0)
        tabFrame.BackgroundTransparency = 1
        tabFrame.Visible = #Tabs == 0
        tabFrame.Name = "Ne0eTab_" .. tabName
        tabFrame.ZIndex = 1
        tabBtn.MouseButton1Click:Connect(function()
            for _, t in pairs(Tabs) do
                t.Frame.Visible = false
                t.Button.BackgroundColor3 = Color3.fromRGB(32,32,38)
            end
            tabFrame.Visible = true
            tabBtn.BackgroundColor3 = Color3.fromRGB(80, 120, 200)
        end)
        table.insert(Tabs, {Button = tabBtn, Frame = tabFrame})
        return tabFrame
    end
    gui.Parent = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")
    gui.Enabled = true
    main.Visible = true
    return main
end

function Ne0eLibrary:CreateButton(parent, args)
    local btn = Instance.new("TextButton")
    btn.Parent = parent
    btn.Size = UDim2.new(0, 200, 0, 40)
    btn.Position = UDim2.new(0, 30, 0, 20 + (#parent:GetChildren()-1)*48)
    btn.Text = args.Name or "Button"
    btn.BackgroundColor3 = Color3.fromRGB(60, 120, 220)
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 18
    btn.BorderSizePixel = 0
    btn.AutoButtonColor = true
    btn.ZIndex = 3
    btn.Visible = true
    btn.MouseButton1Click:Connect(args.Callback)
    return btn
end

function Ne0eLibrary:CreateToggle(parent, args)
    local tgl = Instance.new("TextButton")
    tgl.Parent = parent
    tgl.Size = UDim2.new(0, 200, 0, 40)
    tgl.Position = UDim2.new(0, 250, 0, 20 + (#parent:GetChildren()-1)*48)
    local state = args.Default or false
    tgl.Text = args.Name .. (state and " [AÇIK]" or " [KAPALI]")
    tgl.BackgroundColor3 = Color3.fromRGB(80, 180, 120)
    tgl.TextColor3 = Color3.fromRGB(255,255,255)
    tgl.Font = Enum.Font.GothamBold
    tgl.TextSize = 18
    tgl.BorderSizePixel = 0
    tgl.AutoButtonColor = true
    tgl.ZIndex = 3
    tgl.Visible = true
    tgl.MouseButton1Click:Connect(function()
        state = not state
        tgl.Text = args.Name .. (state and " [AÇIK]" or " [KAPALI]")
        if args.Callback then args.Callback(state) end
    end)
    return tgl
end

return Ne0eLibrary
